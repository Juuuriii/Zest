<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="zest_long_button_style">
        <item name="fontFamily">@font/dekko</item>
        <item name="android:textColor">@color/primary_taupe</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:layout_width">176dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="textAllCaps">false</item>
       <item name="android:textSize">18sp</item>
    </style>

    <style name="zest_imageButton_style">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:padding">8dp</item>
        <item name="backgroundTint">#00FFFFFF</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="zest_text_button">
        <item name="backgroundTint">#00FFFFFF</item>
        <item name="fontFamily">@font/dekko</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_taupe</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dekko_text_16">
